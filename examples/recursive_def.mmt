val is_even : (n : number) => bool 
  := (n : number) => 
    if(n == 0) { 
      true 
    } else { 
      is_odd(n - 1) 
    };

val is_odd : (n : number) => bool 
  := (n : number) => 
    if(n == 0) { 
      false 
    } else { 
      is_even(n - 1) 
    };

val test_even : bool := is_even(4);
val test_odd : bool := is_odd(3);
